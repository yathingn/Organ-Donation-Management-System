@page
@model fullstack.Pages.client.IndexModel
@{
}
<br>
<h2>list of client </h2>
<a class='btn btn-primary btn -sm' href ='/client/create'>new client</a>
<table class="table">
	<thread>
		<tr>
			<th>Id</th>
			<th>name</th>
			<th>email</th>
			<th>phone</th>
			<th>address</th>
			<th> create at</th>
			<th>action</th> 
		</tr>
	</thread>
	<tbody>
		@foreach(var item in Model.listclient)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.name</td>
				<td>@item.phone</td>
				<td>@item.email</td>
				<td>@item.address</td>
				<td>@item.created_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/client/edit?id=@item.id">edit</a>
					<a class="btn btn-primary btn-sm" href="/client/delete?=@item.id">delete</a>
				</td>

			</tr>
		}

	</tbody>

</table>